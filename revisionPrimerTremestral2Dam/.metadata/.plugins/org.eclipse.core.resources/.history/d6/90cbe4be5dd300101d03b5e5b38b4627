package examenPrsp;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class Servidor {
	private ServerSocket server;
	private Socket cliente;

	public Servidor(ServerSocket server) {

		this.server = server;

	}

	public void iniciar() {
		try {
			while (true) {
				cliente = server.accept();
				System.out.println("[Server] " + cliente.getInetAddress() + " connectado al servidor");

			}
		} catch (IOException e) {
			System.err.println("Error: Tuvo problema en el servirdor");
		} finally {
			try {
				server.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
